CORS_ORIGINS=["127.0.0.1", "localhost"]
SENTRY_DSN=

# ---------- postgres ----------
DB__PROVIDER=postgresql+psycopg_async
DB__HOST=localhost
DB__PORT=5432
DB__USER=postgres
DB__PASSWORD=12345678
DB__NAME=users

# ---------- storage ----------
STORAGE__PROVIDER=s3
STORAGE__S3__SERVER_URL=http://localhost:9000
STORAGE__S3__ENDPOINT=localhost
STORAGE__S3__PORT=9000
STORAGE__S3__ACCESS_KEY=admin
