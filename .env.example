JWT_COOKIE__COOKIE_NAME=sessionid
JWT_COOKIE__COOKIE_MAX_AGE=86400
JWT_COOKIE__COOKIE_PATH=/
JWT_COOKIE__COOKIE_SECURE=false
JWT_COOKIE__COOKIE_SAMESITE=strict
